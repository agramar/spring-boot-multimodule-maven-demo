	<springProfile name="local">
		<logger name="hibernate.SQL" level="DEBUG"/>
		<logger name="hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>
		<logger name="jdbc.core.JdbcTemplate" level="DEBUG"/>
		<logger name="jdbc.core.StatementCreatorUtils" level="TRACE"/>

		<root level="INFO">
			<appender-ref ref="CONSOLE"/>
			<appender-ref ref="FILE"/>
		</root>
	</springProfile>
	<springProfile name="dev">
		<root level="INFO">
			<appender-ref ref="CONSOLE"/>
			<appender-ref ref="FILE"/>
		</root>
	</springProfile>
	<springProfile name="prod">
		<root level="INFO">
			<appender-ref ref="CONSOLE"/>
			<appender-ref ref="FILE"/>
		</root>
	</springProfile>
</configuration>
